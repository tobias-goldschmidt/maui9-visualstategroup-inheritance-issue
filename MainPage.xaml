<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui9_visualstategroup_inheritance_issue.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry Style="{StaticResource CustomEntryStyle}"
                   Text="CustomEntryStyle enabled"></Entry>
            <Entry IsEnabled="False"
                   Style="{StaticResource CustomEntryStyle}"
                   Text="CustomEntryStyle disabled"></Entry>
            <Label Style="{StaticResource CustomLabelStyle}"
                   Text="CustomLabelStyle enabled"></Label>
            <Label IsEnabled="False"
                   Style="{StaticResource CustomLabelStyle}"
                   Text="CustomLabelStyle disabled"></Label>
            <CheckBox Style="{StaticResource CustomCheckBoxStyle}"></CheckBox>
            <CheckBox IsEnabled="False"
                      Style="{StaticResource CustomCheckBoxStyle}"></CheckBox>
            <Button Style="{StaticResource CustomButtonStyle}"
                    Text="CustomButtonStyle enabled"></Button>
            <Button IsEnabled="False"
                    Style="{StaticResource CustomButtonStyle}"
                    Text="CustomButtonStyle disabled"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
